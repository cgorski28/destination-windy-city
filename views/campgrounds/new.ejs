<% layout('layouts/boilerplate') %> 

<h1>Add New Campground</h1>
<form action="/campgrounds" method="POST">
    <div>
        <label for="title">Campground Name</label>
        <input type="text" id="title" name="campground[title]" placeholder="campground name">
    </div>
    <div>
        <label for="location">Location</label>
        <input type="text" id="location" name="campground[location]" placeholder="location">
    </div>
    <button>Submit</button>
</form>
<a href="/campgrounds">Cancel</a>